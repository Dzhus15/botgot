modules = ["python-3.11", "postgresql-16"]
[agent]
expertMode = true
integrations = ["python_database==1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Telegram Bot"

[[workflows.workflow]]
name = "Telegram Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install aiogram aiosqlite aiohttp && python main.py"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
build = ["sh", "-c", "pip install aiogram aiosqlite aiohttp"]
run = ["sh", "-c", "python main.py"]
deploymentTarget = "gce"
